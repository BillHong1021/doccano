{
  "name": "doccano",
  "description": "Doccano: Open source text annotation tool",
  "repository": "https://github.com/doccano/doccano",
  "keywords": ["nlp", "annotation", "machine learning"],
  "stack": "container",
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    },
  ],
  "env": {
    "SECRET_KEY": {
      "description": "Secret key for Django",
      "generator": "secret"
    },
    "DEBUG": {
      "description": "Enable debug mode",
      "value": "False"
    },
    "ALLOW_SIGNUP": {
      "description": "Allow open signup",
      "value": "False"
    },
    "ADMIN_USERNAME": {
      "description": "Default admin username",
      "value": "admin"
    },
    "ADMIN_EMAIL": {
      "description": "Default admin email",
      "value": "admin@example.com"
    },
    "ADMIN_PASSWORD": {
      "description": "Default admin password",
      "generator": "secret"
    }
  },
}
